	function validateLogin() {
		if($("#login-btn-icon").hasClass("hide")) {
			$("#login-btn-icon").removeClass("hide");
			$("#login-error").addClass("hide");
			$("#login-error").html('');
			if($.trim($("#email").val()) == '') {
				$("#login-error").html('Please enter your email address');
				$("#login-error").removeClass("hide");
				$("#email").focus();
				$("#login-btn-icon").addClass("hide");
			} else if($.trim($("#password").val()) == '') {
				$("#password").focus();
				$("#login-btn-icon").addClass("hide");
			} else {
				var d = new Date();
				var d_o = d.getTimezoneOffset();
				$.post("app/login.php", { email: $("#email").val(), password: $("#password").val(), dateoffset: d_o },
				function(data) {
					if(data['error'] == false) {
						window.location = data['response'];
					} else {
						$("#login-error").html(data['response']);
						$("#login-error").removeClass("hide");
						$("#password").val('');
						$("#password").focus();
						$("#login-btn-icon").addClass("hide");
					}
				}, 'json');
			}
		}
	}
	function validateSignup() {
		if($("#signup-btn-icon").hasClass("hide")) {
			$("#signup-btn-icon").removeClass("hide");
			$("#signup-error").addClass("hide");
			$("#signup-error").html('');
			if($.trim($("#fname").val()) == '') {
				$("#signup-error").html('Please enter your first name');
				$("#signup-error").removeClass("hide");
				$("#fname").focus();
				$("#signup-btn-icon").addClass("hide");
			} else if($.trim($("#lname").val()) == '') {
				$("#signup-error").html('Please enter your last name');
				$("#signup-error").removeClass("hide");
				$("#lname").focus();
				$("#signup-btn-icon").addClass("hide");
			} else if($.trim($("#email-signup").val()) == '') {
				$("#signup-error").html('Please enter your email address');
				$("#signup-error").removeClass("hide");
				$("#email-signup").focus();
				$("#signup-btn-icon").addClass("hide");
			} else if($.trim($("#password-signup").val()) == '') {
				$("#signup-error").html('Please enter a password');
				$("#signup-error").removeClass("hide");
				$("#password-signup").focus();
				$("#signup-btn-icon").addClass("hide");
			} else if($("#roles").val() == 0) {
				$("#signup-error").html('Please select an option');
				$("#signup-error").removeClass("hide");
				$("#signup-btn-icon").addClass("hide");
			} else if(!$('#terms').is(':checked')) {
				$("#signup-error").html('Please agree to the Terms and Conditions');
				$("#signup-error").removeClass("hide");
				$("#signup-btn-icon").addClass("hide");
			} else {
				$("#role").val($("#roles").val());
				validateEmail($.trim($("#email-signup").val()));
			}
		}
	}
	function validateEmail(e) {
		$.post("app/validate_email.php", { e: e },
		function(data) {
			if(data['error'] == false) {
				validateAccount(e);
			} else {
				$("#signup-error").html('Please enter a valid email address');
				$("#signup-error").removeClass("hide");
				$("#email-signup").focus();
				$("#signup-btn-icon").addClass("hide");
			}
		}, 'json');
	}
	function validateAccount(e) {
		$.post("app/validate_account.php", { e: e },
		function(data) {
			if(data['error'] == false) {
				$('#signup-modal').modal('hide');
				$('#signup-btn-icon').addClass('hide');
				if($("#role").val() == 3) {
					$("#keycode-btn-icon").addClass("hide");
					$("#keycode-error").addClass("hide");
					$("#keycode-help-toggle").removeClass("fa-caret-down").addClass("fa-caret-right");
					$("#keycode-help").addClass("hide");
					$('#keycode-signup-modal').modal('show');
				} else {
					if($('#role').val() == 1) {
						completeSignup(2);
					} else {
						completeSignup(4);
					}
				}
			} else {
				if(data['response'] == 'exists') {
					$('#signup-btn-icon').addClass('hide');
					$('#email').val($('#email-signup').val());
					$('#login-error').html('You already have a BidPlanroom account. Please log in.');
					$('#login-error').removeClass('hide');
					$('#signup-modal').modal('hide');
					$('#login-modal').modal('show');
				} else {
					$('#signup-error').html(data['response']);
					$('#signup-error').removeClass("hide");
					$('#signup-btn-icon').addClass('hide');
				}
			}
			$("#btn-icon2").removeClass("fa-spinner fa-spin");
		}, 'json');
	}
	function completeSignup(role) {
		$('#processing-signup-loader').removeClass('hide');
		$('#processing-signup-error').addClass('hide');
		$('#processing-signup-error').html('');
		$('#processing-signup-modal').modal('show');
		$.post("app/create_user_account.php", { fn: $.trim($("#fname").val()), ln: $.trim($("#lname").val()), e: $.trim($("#email-signup").val()), p: $.trim($("#password-signup").val()), r: role  },
		function(data) {
			if(data['error'] == false) {
				var d = new Date();
				var d_o = d.getTimezoneOffset();
				$.post("app/login.php", { email: $.trim($("#email-signup").val()), password: $.trim($("#password-signup").val()), dateoffset: d_o },
				function(data) {
					if(data['error'] == false) {
						window.location = data['response'];
					} else {
						// If for some reason log in fails after account creation
						$('#email').val($.trim($('#email-signup').val()));
						$('#processing-signup-loader').addClass('hide');
						$('#processing-signup-modal').modal("hide");
						$('#login-modal').modal("show");
					}
				}, 'json');
			} else {
				$('#processing-signup-loader').addClass("hide");
				$('#processing-signup-error').html(data['response']);
				$('#processing-signup-error').removeClass('hide');
			}
		}, 'json');
	}
	function validateKeycode() {
		if($("#keycode-btn-icon").hasClass("hide")) {
			$("#keycode-btn-icon").removeClass("hide");
			$("#keycode-error").addClass("hide");
			$("#keycode-help-toggle").removeClass("fa-caret-down").addClass("fa-caret-right");
			$("#keycode-help").addClass("hide");
			if($.trim($("#key").val()) == '') {
				$("#keycode-error").html('Please enter your employee key code');
				$("#keycode-error").removeClass("hide");
				$("#keycode-btn-icon").addClass("hide");
				$("#key").focus();
			} else {
				$.post("app/validate_employee_keycode_post.php", { k: $.trim($("#key").val()), e: $.trim($("#email-signup").val()) },
				function(data) {
					if(data['error'] == false) {
						$("#keycode-btn-icon").addClass("hide");
						$('#keycode-signup-modal').modal('hide');
						completeSignup(1);
					} else {
						$("#keycode-error").html(data['response']);
						$("#keycode-error").removeClass("hide");
						$("#keycode-btn-icon").addClass("hide");
					}
				}, 'json');
			}
		}
	}
	function forgotPasswordSubmit() {
		if($("#forgot-password-btn-icon").hasClass("hide")) {
			$("#forgot-password-btn-icon").removeClass("hide");
			$("#forgot-password-error").addClass("hide");
			$("#forgot-password-error").html('');
			if($.trim($("#reset-id").val()) == '') {
				$("#forgot-password-error").html('Please enter your email address');
				$("#forgot-password-error").removeClass("hide");
				$("#reset-id").focus();
				$("#forgot-password-btn-icon").addClass("hide");
			} else {
				$.post("app/forgot_password_submit.php", { email: $("#reset-id").val()  },
				function(data) {
					if(data['error'] == false) {
						$('#forgot-password-modal').modal('hide');
						$('#forgot-password-btn-icon').addClass('hide');
						$('#forgot-password-sent-modal').modal('show');
					} else {
						$("#forgot-password-error").html(data['response']);
						$("#forgot-password-error").removeClass("hide");
						$("#forgot-password-btn-icon").addClass("hide");
					}
				}, 'json');
			}
		}
	}
	function loadTermsConditions() {
		$('#terms-conditions').addClass("hide");
		$('#terms-conditions-loader').removeClass("hide");
		$('#signup-modal').modal("hide");
		$('#terms-conditions-modal').modal("show");
		$.post("app/ajax_get_terms_conditions.php", { page: 'terms_conditions_05102019' },
		function(data) {
			if(data['error'] == false) {
				$('#terms-conditions').html(data['response']);
				$('#terms-conditions-loader').addClass("hide");
				$('#terms-conditions').removeClass("hide");
			} else {
				$('#terms-conditions').html('<div class="alert alert-danger">' + data['response'] + '</div>');
				$('#terms-conditions-loader').addClass("hide");
				$('#terms-conditions').removeClass("hide");
			}
		}, 'json');
	}
	</script>
	
</body>
